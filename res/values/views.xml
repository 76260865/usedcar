<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="register.edit" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:ems">10</item>
        <item name="android:padding">10dip</item>
        <item name="android:textColor">#134EFD</item>
        <item name="android:textColorHint">#D4D4D4</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="register.account" parent="register.edit">
        <item name="android:hint">@string/hint_phone</item>
        <item name="android:inputType">phone</item>
    </style>
    <style name="register.password" parent="register.edit">
        <item name="android:hint">@string/hint_password</item>
    </style>

    <style name="register.agreement" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/chk_confirm_condition</item>
        <item name="android:textColor">#333333</item>
    </style>
    <style name="register.button" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/register_button_bg</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:text">@string/txt_register</item>
    </style>
    <style name="Info.Item" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">10dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">16dip</item>
        <item name="android:paddingBottom">16dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
