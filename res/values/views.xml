<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="rectangle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rect_bg</item>
    </style>
    <style name="rectangle.vertical" parent="rectangle">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="register.icon" parent="">
        <item name="android:layout_width">32dip</item>
        <item name="android:layout_height">32dip</item>
        <item name="android:layout_margin">2dip</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="register.edit" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:ems">10</item>
        <item name="android:padding">10dip</item>
        <item name="android:textColor">#134EFD</item>
        <item name="android:textColorHint">#D4D4D4</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="register.account" parent="register.edit">
        <item name="android:hint">@string/hint_phone</item>
        <item name="android:inputType">phone</item>
    </style>
    <style name="register.password" parent="register.edit">
        <item name="android:hint">@string/hint_password</item>
    </style>

    <style name="login.icon" parent="register.icon"/>
    <style name="login.account" parent="register.account"/>
    <style name="login.password" parent="register.password"/>

    <style name="register.agreement" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/chk_confirm_condition</item>
        <item name="android:textColor">#333333</item>
    </style>
    <style name="register.verify_code" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/rect_bg</item>
        <item name="android:minWidth">100dip</item>
        <item name="android:minHeight">40dip</item>
    </style>
    <style name="register.obtain_code" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:text">"获取验证码"</item>
    </style>
    <style name="button1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/register_button_bg</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="register.button" parent="button1">
        <item name="android:text">@string/txt_register</item>
    </style>
</resources>
