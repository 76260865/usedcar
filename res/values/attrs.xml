<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ExtendedTextView">
        <attr name="direction" format="integer"/>
        <attr name="prefix" format="string"/>
        <attr name="prefixColor" format="color"/>
        <attr name="prefixSize" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="IconEditText">
        <attr name="src" format="integer|reference"/>
        <attr name="editId" format="integer"/>
        <attr name="inputType" format="string|reference"/>
        <attr name="hint" format="string|reference"/>
        <attr name="textColor" format="color|reference"/>
        <attr name="textColorHint" format="color|reference"/>
        <attr name="textSize" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="DropDownListView">
        <attr name="isDropDownStyle" format="boolean" />
        <attr name="isOnBottomStyle" format="boolean" />
        <attr name="isAutoLoadOnBottom" format="boolean" />
    </declare-styleable>
</resources>
