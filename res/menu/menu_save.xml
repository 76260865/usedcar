<?xml version="1.0" encoding="utf-8"?>
<menu
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://robobinding.org/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.jason.usedcar.CarDetailsActivity"
        tools:ignorePrefix="true">
    <item
            android:id="@+id/action_save"
            android:title="收藏"
            app:showAsAction="always"
            bind:onMenuItemClick="addToFavorite"
            bind:visible="{notAdded}"/>
    <item
            android:id="@+id/action_cancel_save"
            android:title="取消收藏"
            app:showAsAction="always"
            bind:onMenuItemClick="cancelFavorite"
            bind:visible="{added}"/>
    <item
            android:id="@+id/action_edit"
            android:title="编辑"
            app:showAsAction="always"
            bind:onMenuItemClick="editCar"
            bind:visible="{edit}"/>
</menu>