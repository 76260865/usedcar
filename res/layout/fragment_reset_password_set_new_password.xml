<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://robobinding.org/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="20dip"
            android:paddingRight="20dip">
        <com.jason.usedcar.view.WarningTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="20dip"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:text="验证码已经发送到您的手机:"
                android:textColor="@color/notice_color"/>
        <TextView
                android:id="@+id/reset_password_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:textColor="#134EFD"
                android:textSize="20sp"
                bind:text="{phoneNumber}"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:text="输入短信验证码"
                android:textColor="@color/notice_color"/>
        <EditText
                android:id="@+id/reset_password_verify_code"
                style="@style/EditText"
                android:layout_margin="5dip"
                android:hint="请输入验证码"
                android:inputType="number"
                bind:text="${securityCode}"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/register_verify_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="未收到短信验证码?"
                    android:textColor="@color/notice_color"/>
            <Button
                    android:id="@+id/reset_password_obtain_code"
                    style="@style/Button"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="获取验证码"
                    android:textSize="16sp"
                    bind:enabled="{timeout}"
                    bind:onClick="requestSecurityCode"/>
        </LinearLayout>
        <EditText
                android:id="@+id/reset_password_new_password"
                style="@style/EditText"
                android:layout_margin="5dip"
                android:hint="输入新密码"
                android:inputType="textVisiblePassword"
                bind:text="${password}"/>
        <EditText
                android:id="@+id/reset_password_confirm_password"
                style="@style/EditText"
                android:layout_margin="5dip"
                android:hint="再次输入新密码"
                android:inputType="textVisiblePassword"
                bind:text="${passwordConfirm}"/>
        <Button
                android:id="@+id/reset_password_confirm"
                style="@style/Button"
                android:layout_margin="5dip"
                android:text="确定"
                bind:enabled="{resetPasswordEnabled}"
                bind:onClick="resetPassword"/>
    </LinearLayout>
</ScrollView>
