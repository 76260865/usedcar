<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.internal.widget.LinearLayoutICS
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:support="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEFEF"
        android:orientation="vertical"
        support:divider="@drawable/divider_h"
        support:showDividers="middle" >
    <Button
            android:id="@+id/info_center_my_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:drawableRight="@drawable/arrow"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dip"
            android:paddingRight="16dip"
            android:text="@string/btn_my_profile_text"
            android:textColor="#444444"/>
    <Button
            android:id="@+id/info_center_identify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:drawableRight="@drawable/arrow"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dip"
            android:paddingRight="16dip"
            android:text="@string/btn_identification_text"
            android:textColor="#444444"
            android:visibility="visible" />
    <Button
            android:id="@+id/info_center_sale_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:drawableRight="@drawable/arrow"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dip"
            android:paddingRight="16dip"
            android:text="@string/btn_car_selling_text"
            android:textColor="#444444"
            android:visibility="gone"/>
    <Button
            android:id="@+id/info_center_my_collect_cars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:drawableRight="@drawable/arrow"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dip"
            android:paddingRight="16dip"
            android:text="@string/btn_my_favorate_text"
            android:textColor="#444444" />
    <Button
            android:id="@+id/info_center_bought_cars_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:drawableRight="@drawable/arrow"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dip"
            android:paddingRight="16dip"
            android:text="@string/btn_records_for_buy_car_text"
            android:textColor="#444444" />
    <View
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:visibility="invisible"/>
</android.support.v7.internal.widget.LinearLayoutICS>
