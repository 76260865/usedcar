<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">
    <EditText
        style="@style/EditText"
        android:id="@+id/register_reseller_name"
        android:hint="@string/txt_dealer_name"/>
    <TextView
        style="@style/EditText"
        android:id="@+id/register_reseller_address"
        android:layout_marginTop="5dip"
        android:hint="@string/txt_dealer_addr"/>
    <RadioGroup
        android:id="@+id/register_reseller_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/register_used_car_company"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:button="@null"
            android:drawableLeft="@drawable/radio"
            android:drawablePadding="4dip"
            android:checked="true"
            android:text="@string/tbtn_used_car_company"
            android:textColor="#333333"/>
        <RadioButton
            android:id="@+id/register_4s_shop"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="20dip"
            android:button="@null"
            android:drawableLeft="@drawable/radio"
            android:drawablePadding="4dip"
            android:text="@string/rbtn_4s_store"
            android:textColor="#333333"/>
    </RadioGroup>
</LinearLayout>
