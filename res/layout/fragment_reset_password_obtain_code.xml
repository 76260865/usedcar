<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://robobinding.org/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        tools:ignore="ignorePrefix">
    <com.jason.usedcar.view.WarningTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="20dip"/>
    <EditText
            android:id="@+id/reset_password_account"
            style="@style/EditText"
            android:layout_margin="5dp"
            android:hint="注册手机号"
            android:inputType="phone"
            bind:text="${phoneNumber}"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:text="该手机号仅用于确认您的身份，以确保您的账号安全"
            android:textColor="@color/notice_color"/>
    <Button
            android:id="@+id/reset_password_obtain_code"
            style="@style/Button"
            android:layout_margin="5dip"
            android:text="获取验证码"
            bind:enabled="{requestSecurityCodeEnabled}"
            bind:onClick="requestSecurityCode"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:text="若你无法通过该方式找回密码，请登录电脑端二搜车www.2soce.com，使用其他验证方式找回密码."
            android:textColor="@color/notice_color"/>
</LinearLayout>
