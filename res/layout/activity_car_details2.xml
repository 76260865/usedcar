<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:bind="http://robobinding.org/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:res="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:prefixIgnore="true">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            bind:visibility="{contentVisibility}">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:context="com.jason.usedcar.CarDetailsActivity">
            <TextView
                    android:id="@+id/textCarName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="#89dedede"
                    android:gravity="center"
                    android:textSize="18sp"
                    bind:text="{carName}"
                    tools:text="大众polo"/>
            <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    android:layout_marginBottom="6dip"
                    android:background="#56efefef"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <com.jason.usedcar.view.ExtendedTextView
                        style="@style/Details.Item"
                        android:id="@+id/textPreSalePrice"
                        android:layout_weight="1"
                        res:prefix="预售价格:"
                        res:prefixColor="#000000"
                        res:prefixSize="18sp"
                        bind:text="{salePrice}"
                        tools:text="1.1万"/>
                <TextView
                        android:id="@+id/textPriceType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="6dip"
                        android:layout_marginRight="6dip"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:textColor="#FB790A"
                        android:textSize="16sp"
                        bind:text="{priceType}"
                        tools:text="一口价"/>
            </LinearLayout>
            <com.jason.usedcar.view.ExtendedTextView
                    style="@style/Details.Item"
                    android:id="@+id/textBuyTime"
                    res:prefix="首次购买时间:"
                    res:prefixColor="#000000"
                    res:prefixSize="18sp"
                    bind:text="{purchaseTime}"
                    tools:text="2013年9月"/>
            <com.jason.usedcar.view.ExtendedTextView
                    style="@style/Details.Item"
                    android:id="@+id/textMileage"
                    res:prefix="行驶里程:"
                    res:prefixColor="#000000"
                    res:prefixSize="18sp"
                    bind:text="{mileage}"
                    tools:text="2.5万公里"/>
            <com.jason.usedcar.view.ExtendedTextView
                    style="@style/Details.Item"
                    android:id="@+id/textPayType"
                    res:prefix="交易方式:"
                    res:prefixColor="#000000"
                    res:prefixSize="18sp"
                    bind:text="{payType}"
                    tools:text="可接受买家贷款购买或者全款购买(两者之一)"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                <com.jason.usedcar.view.ExtendedTextView
                        style="@style/Details.Item"
                        android:id="@+id/textDailyPaid"
                        android:layout_weight="1"
                        res:prefix="日供低至:"
                        res:prefixColor="#000000"
                        res:prefixSize="18sp"
                        bind:text="{dailyPay}"
                        tools:text="100元"/>
                <TextView
                        android:id="@+id/textCalculator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="6dip"
                        android:layout_marginRight="6dip"
                        android:background="@drawable/btn"
                        android:gravity="center"
                        android:clickable="true"
                        android:text="车贷计算器"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        bind:onClick="openCalculator"/>
            </LinearLayout>
            <com.jason.usedcar.view.ExtendedTextView
                    style="@style/Details.Item"
                    android:id="@+id/textContactPhone"
                    res:prefix="车主联系电话:"
                    res:prefixColor="#000000"
                    res:prefixSize="18sp"
                    bind:text="{contactPhone}"
                    tools:text="028-99999999"/>
            <com.jason.usedcar.view.ExtendedTextView
                    style="@style/Details.Item"
                    android:id="@+id/textDealPlace"
                    res:prefix="看车地点:"
                    res:prefixColor="#000000"
                    res:prefixSize="18sp"
                    bind:text="{dealPlace}"
                    tools:text="成都市天府广场199号"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:visibility="{buyVisibility}">
                <Button
                        android:id="@+id/btnDial"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="12dip"
                        android:background="@drawable/btn"
                        android:text="联系车主"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        bind:onClick="callCarOwner"/>
                <Button
                        android:id="@+id/btnAddToCart"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="12dip"
                        android:background="@drawable/btn"
                        android:text="加入购物车"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        bind:onClick="addToCart"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="优卡报(Used Car Report)"/>
            <android.webkit.WebView
                    android:id="@+id/webview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    bind:url="{url}"
                    bind:useWideViewPort="{useWideViewPort}"
                    bind:overviewMode="{overviewMode}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="购车小管家\n把它打印出来跟您一起挑选爱车吧！" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/blue"
                android:text="常规问题" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="车辆是否还在厂家质保期内？\n 下一次保养需要在多少里程后进行？\n 车辆保险将在多久之后到期？" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/blue"
                android:text="现场验车问题" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="车辆外观是否完好？划痕是否都已修复？\n 打开点火开关，仪表盘是否显示所有系统都正常工作？\n仪表盘中安全气囊是否显示工作正常\n轮胎胎纹是否达到最低厚度要求？表面是否光滑、完整？\n 车内各项按钮、开关是否正常工作？如大灯开关、转向开关、雨刷开关、空调开关、车窗起降开关、后视镜调整开关、音响系统开关等\n 点烟器、AUX接口、ipod接口等附件是否正常工作\n" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/blue"
                android:text="试驾问题" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="刹车是否灵敏？\n转向是否正常？\n 发动机是否有异响？加速是否平顺？ "/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            bind:visibility="{progressVisibility}">
        <ProgressBar
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="正在载入..."/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="点击，重新加载"
            android:visibility="gone"
            bind:onClick="loadData"
            bind:visibility="{nothingVisibility}"/>
</FrameLayout>
