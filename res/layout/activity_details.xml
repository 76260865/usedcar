<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:et="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.jason.usedcar.CarDetailsActivity">
    <TextView
            android:id="@+id/textCarName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#89dedede"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="大众polo"/>
    <ImageView
            android:id="@+id/imageCarShow"
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:layout_marginBottom="6dip"
            android:background="#56efefef"
            android:scaleType="centerCrop"
            android:src="@drawable/xianjian04"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <com.jason.usedcar.view.ExtendedTextView
                style="@style/Details.Item"
                android:id="@+id/textPreSalePrice"
                android:layout_weight="1"
                et:prefix="预售价格:"
                et:prefixColor="#000000"
                et:prefixSize="18sp"
                tools:text="1.1万"/>
        <TextView
                android:id="@+id/textPriceType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textColor="#FB790A"
                android:textSize="16sp"
                tools:text="一口价"/>
    </LinearLayout>
    <com.jason.usedcar.view.ExtendedTextView
            style="@style/Details.Item"
            android:id="@+id/textBuyTime"
            et:prefix="首次购买时间:"
            et:prefixColor="#000000"
            et:prefixSize="18sp"
            tools:text="2013年9月"/>
    <com.jason.usedcar.view.ExtendedTextView
            style="@style/Details.Item"
            android:id="@+id/textMileage"
            et:prefix="行驶里程:"
            et:prefixColor="#000000"
            et:prefixSize="18sp"
            tools:text="2.5万公里"/>
    <com.jason.usedcar.view.ExtendedTextView
            style="@style/Details.Item"
            android:id="@+id/textPayType"
            et:prefix="交易方式:"
            et:prefixColor="#000000"
            et:prefixSize="18sp"
            tools:text="可接受买家贷款购买或者全款购买(两者之一)"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
        <com.jason.usedcar.view.ExtendedTextView
                style="@style/Details.Item"
                android:id="@+id/textDailyPaid"
                android:layout_weight="1"
                et:prefix="日供低至:"
                et:prefixColor="#000000"
                et:prefixSize="18sp"
                tools:text="100元"/>
        <TextView
                android:id="@+id/textCalculator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="@drawable/btn"
                android:gravity="center"
                android:onClick="onClick"
                android:clickable="true"
                android:text="车贷计算器"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>
    </LinearLayout>
    <com.jason.usedcar.view.ExtendedTextView
            style="@style/Details.Item"
            android:id="@+id/textContactPhone"
            et:prefix="车主联系电话:"
            et:prefixColor="#000000"
            et:prefixSize="18sp"
            tools:text="028-99999999"/>
    <com.jason.usedcar.view.ExtendedTextView
            style="@style/Details.Item"
            android:id="@+id/textDealPlace"
            et:prefix="看车地点:"
            et:prefixColor="#000000"
            et:prefixSize="18sp"
            tools:text="成都市天府广场199号"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/btnDial"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="12dip"
                android:background="@drawable/btn"
                android:onClick="onClick"
                android:text="联系车主"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>
        <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="12dip"
                android:background="@drawable/btn"
                android:onClick="onClick"
                android:text="加入购物车"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>
