<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://robobinding.org/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C4C4C4"
                android:paddingLeft="10dip"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="基本信息"
                android:textColor="#FFFFFF"
                android:textSize="18sp"/>
        <com.jason.usedcar.view.ExtendedTextView
                style="@style/Info.Item"
                android:id="@+id/car_info_address"
                android:textColor="#333333"
                android:scrollHorizontally="true"
                bind:text="{address}"
                bind:onClick="pickAddress"
                app:prefix="交易地点:"
                app:prefixColor="#333333"
                app:prefixSize="20sp"/>
        <com.jason.usedcar.view.ExtendedEditText
                style="@style/Info.Item"
                android:id="@+id/car_info_street"
                android:textColor="#333333"
                bind:text="${street}"
                app:prefix="街道地址:"
                app:prefixColor="#333333"
                app:prefixSize="20sp"/>
        <com.jason.usedcar.view.ExtendedTextView
                style="@style/Info.Item"
                android:id="@+id/car_info_type"
                android:textColor="#333333"
                android:scrollHorizontally="true"
                bind:text="{car}"
                bind:onClick="pickCar"
                app:prefix="车辆选择:"
                app:prefixColor="#333333"
                app:prefixSize="20sp"/>
        <com.jason.usedcar.view.ExtendedTextView
                style="@style/Info.Item"
                android:id="@+id/car_info_time_bought"
                android:textColor="#333333"
                bind:text="{time}"
                bind:onClick="pickDate"
                app:prefix="购买时间:"
                app:prefixColor="#333333"
                app:prefixSize="20sp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <com.jason.usedcar.view.ExtendedEditText
                    style="@style/Info.Item"
                    android:id="@+id/car_info_distance"
                    android:layout_weight="1"
                    android:scrollHorizontally="true"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:maxLength="5"
                    bind:text="${distance}"
                    app:prefix="表显里程:"
                    app:prefixColor="#333333"
                    app:prefixSize="20sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="4dip"
                    android:text="万公里"
                    android:textColor="#333333"
                    android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:addStatesFromChildren="true"
                android:background="@drawable/edit_bg"
                android:orientation="horizontal"
                android:padding="0dp">
            <com.jason.usedcar.view.ExtendedEditText
                    style="@style/Info.Item2"
                    android:id="@+id/car_info_price"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scrollHorizontally="true"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:maxLength="8"
                    bind:text="${price}"
                    app:prefix="预售价格:"
                    app:prefixColor="#333333"
                    app:prefixSize="20sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="4dip"
                    android:text="万"
                    android:textColor="#333333"
                    android:textSize="20sp"/>
            <CheckBox
                    android:id="@+id/price_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:button="@drawable/price_check_bg"
                    bind:checked="{priceCheck}"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:addStatesFromChildren="true"
                android:background="@drawable/edit_bg"
                android:orientation="horizontal"
                android:padding="0dp">
            <com.jason.usedcar.view.ExtendedTextView
                    style="@style/Info.Item2"
                    android:id="@+id/car_deal_type"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:textColor="#333333"
                    app:prefix="交易方式:"
                    app:prefixColor="#333333"
                    app:prefixSize="20sp"/>
            <CheckBox
                    android:id="@+id/type_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    bind:checked="{typeCheck}"
                    android:button="@drawable/price_check_bg"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:addStatesFromChildren="true"
                android:background="@drawable/edit_bg"
                android:orientation="vertical"
                android:padding="0dip">
            <com.jason.usedcar.view.ExtendedEditText
                    style="@style/Info.Item"
                    android:id="@+id/car_info_vin"
                    android:background="@android:color/transparent"
                    android:paddingBottom="4dip"
                    android:maxLength="17"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM1234567890"
                    bind:text="${vin}"
                    app:prefix="车辆识别码/VIN:"
                    app:prefixColor="#333333"
                    app:prefixSize="20sp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingBottom="10dip"
                    android:text="由17位字符组成，可在行驶证或者仪表板左侧，挡风玻璃下面找到"
                    android:textColor="#888888"
                    android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
