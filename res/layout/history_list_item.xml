<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
    <ImageView
            android:id="@+id/car_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher"/>
    <TextView
            android:id="@+id/history_car_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/history_car_info"/>
    <TextView
            android:id="@+id/order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_order_number"/>
    <TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_order_price"/>
    <TextView
            android:id="@+id/order_pay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_order_pay_time"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/order_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/order_action"
                android:text="@string/history_order_state"/>
        <TextView
                android:id="@+id/order_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/rect_bg"
                android:padding="4dip"
                android:text="未付款"/>
    </RelativeLayout>
</LinearLayout>
