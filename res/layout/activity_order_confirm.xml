<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://robobinding.org/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F9F9"
        android:orientation="vertical">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="160dip"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            bind:url="{productPhotoUrl}"
            tools:src="@drawable/logo"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#858585"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            bind:text="{productName}"
            tools:text="捷豹路虎2014款"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#515151"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:textColor="#FFFFFF"
            bind:text="{productVinCode}"
            tools:text="车辆识别码/VIN：XXXXXXXXXXXXXXXXXXX"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:background="#515151"
            android:textColor="#FFFFFF"
            bind:text="{loanAmount}"
            tools:text="贷款金额：100万元"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:background="#515151"
            android:textColor="#FFFFFF"
            bind:text="{productPrice}"
            tools:text="价格：100万元"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="6dp"
            android:background="#515151"
            android:textColor="#FFFFFF"
            bind:text="{tradeFee}"
            tools:text="服务费：100万元"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            bind:text="{orderNumber}"
            tools:text="订单号：     XXXXXX"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            bind:text="{orderDate}"
            tools:text="下单日期：2014年3月3日 22:15"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            bind:text="{sellerName}"
            tools:text="卖家信息：李小双"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            bind:text="{sellerId}"
            tools:text="身份证：    431000000000000"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="6dp"
            android:background="#99999999"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            bind:text="{orderPrice}"
            tools:text="订单金额：$10000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:text="(订单金额 ＝ 商品价格 ＋ 交易服务费 － 贷款金额)"
            android:textColor="#666666"
            android:textSize="12sp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="36dip"
                android:background="@drawable/btn"
                android:minWidth="120dp"
                android:text="取消订单"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                bind:onClick="cancelOrder"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="36dip"
                android:layout_marginLeft="30dp"
                android:background="@drawable/btn"
                android:minWidth="120dp"
                android:text="支付"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                bind:onClick="pay"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>
